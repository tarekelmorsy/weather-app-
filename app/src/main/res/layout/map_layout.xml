<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/family_semi_round_medium"
        android:gravity="center"
        android:text="@string/save_this_location"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNameCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:autoSizeMaxTextSize="18sp"
        android:autoSizeMinTextSize="11sp"
        android:autoSizeStepGranularity=".5sp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/family_semi_round_medium"
        android:maxLines="1"
        android:text="ciro"
        android:textColor="@color/bg_api2"
        android:textSize="17sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/latLongCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:autoSizeMaxTextSize="18sp"
        android:autoSizeMinTextSize="11sp"
        android:autoSizeStepGranularity=".5sp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/family_semi_round_medium"
        android:maxLines="2"
        android:text="ciro"
        android:textColor="@color/bg_api2"
        android:textSize="17sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/bt_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_cancle"
            android:fontFamily="@font/family_semi_round_medium"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/bt_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_icon"
            android:fontFamily="@font/family_semi_round_medium"
            android:text="@string/save"
            android:textSize="25sp" />
    </LinearLayout>

</LinearLayout>