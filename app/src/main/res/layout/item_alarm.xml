<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/favorite_container"
    app:dragEdge="right"
    app:mode="same_level"

    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
     android:layout_marginBottom="20dp"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">

    <LinearLayout

        android:padding="10dp"
        android:layout_width="wrap_content"
        android:gravity="center|right"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivDeleteAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_icon"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_delete_24" />

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/bg_itme_favorit"

        android:padding="10dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
         android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvTimeStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/family_semi_round_medium"
                android:text="20Â°C"
                android:textColor="#FCE1DA"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/imIconFv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/tvDateStart"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dumata"
                android:textColor="#777676"
                android:textSize="10sp"
                android:fontFamily="@font/family_semi_round_light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCurrentFav" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
             android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/bg_api"
            />
        <LinearLayout
             android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tvTimeEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/family_semi_round_medium"
                android:text="11:44am"
                android:textColor="#FCE1DA"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/imIconFv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/tvDateEnd"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11/11"
                android:layout_marginTop="10dp"
                android:textColor="#777676"
                android:textSize="10sp"
                android:fontFamily="@font/family_semi_round_light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCurrentFav" />

        </LinearLayout>

    </LinearLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>